<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.infybankapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.AppClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".updatedata.ProfDetailAct"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".updatedata.UpdateEduAct"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".updatedata.UpdateSummary"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".viewprofile.view.ViewProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".browseprofile.view.BrowseProfiles"
            android:screenOrientation="portrait" />
        <activity
            android:name=".option.view.OptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".updatedata.UpdatePIAct"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".registration.view.RegisterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".dashboard.view.DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".splash.view.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.view.LoginActivity"
            android:label="Login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>