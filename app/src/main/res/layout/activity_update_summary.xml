<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updatedata.UpdateSummary"
    android:background="@color/backgroundApp">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">


        <LinearLayout
            android:padding="@dimen/margin_top10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:text="Summary"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_top10"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/summaryET"
                android:hint="Summary"
                android:layout_marginTop="@dimen/margin_top10"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@drawable/et_back"
                android:paddingLeft="@dimen/margin_top10"
                android:paddingRight="@dimen/margin_top10"
                android:layout_height="@dimen/et_hight"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/update_pi_btn"
                    android:text="Update"
                    android:background="@drawable/button_back"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_top20"
                    android:layout_width="150dp"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/cancel_update_btn"
                    android:text="Cancel"
                    android:layout_marginLeft="@dimen/margin_top10"
                    android:background="@drawable/button_back"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/margin_top20"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</RelativeLayout>