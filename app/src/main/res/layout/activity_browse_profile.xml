<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundApp"
    tools:context=".ViewProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_margin="@dimen/margin_top10"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/margin_top10"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_personal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/margin_top10"
                        android:text="Personal Details"
                        android:textColor="@android:color/black" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/title_personal"
                        android:layout_marginLeft="@dimen/margin_top10"
                        android:layout_marginRight="@dimen/margin_top10"
                        android:background="@android:color/darker_gray" />



                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view1"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="@dimen/margin_top10"
                        android:layout_marginTop="@dimen/margin_top10"
                        android:layout_marginRight="@dimen/margin_top10"
                        android:text="Name.: Sangharatna Sonawane"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/email_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_below="@+id/name_tv"
                        android:layout_marginLeft="@dimen/margin_top10"
                        android:layout_marginTop="@dimen/margin_top10"
                        android:layout_marginRight="@dimen/margin_top10"
                        android:text="Email.: Sangharatna@live.in"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/mobbile_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_below="@+id/email_tv"
                        android:layout_marginLeft="@dimen/margin_top10"
                        android:layout_marginTop="@dimen/margin_top10"
                        android:layout_marginRight="@dimen/margin_top10"
                        android:text="Mobile.: 9637668381"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobbile_tv"
                        android:background="@android:color/transparent"
                        android:layout_margin="@dimen/margin_top10"
                        android:text="Address.: Marunji Pune"
                        android:textColor="@android:color/black" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="@dimen/margin_top10"
                android:layout_marginRight="@dimen/margin_top10"
                android:layout_marginBottom="@dimen/margin_top10"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/margin_top10"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_summery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/margin_top10"
                        android:text="Summary"
                        android:textColor="@android:color/black" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/title_summery"
                        android:layout_marginLeft="@dimen/margin_top10"
                        android:layout_marginRight="@dimen/margin_top10"
                        android:background="@android:color/darker_gray" />



                    <TextView
                        android:id="@+id/summery_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view2"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="@dimen/margin_top10"
                        android:layout_marginTop="@dimen/margin_top10"
                        android:layout_marginRight="@dimen/margin_top10"
                        android:text="I have 5yr of experiance in android development"
                        android:textColor="@android:color/black" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="@dimen/margin_top10"
                android:layout_marginRight="@dimen/margin_top10"
                android:layout_marginBottom="@dimen/margin_top10"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/margin_top10"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_eduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/margin_top10"
                        android:text="Educational Details"
                        android:textColor="@android:color/black" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/title_eduction"
                        android:layout_marginLeft="@dimen/margin_top10"
                        android:layout_marginRight="@dimen/margin_top10"
                        android:background="@android:color/darker_gray" />



                    <TextView
                        android:id="@+id/education_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view3"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="@dimen/margin_top10"
                        android:layout_marginTop="@dimen/margin_top10"
                        android:layout_marginRight="@dimen/margin_top10"
                        android:text="B.E. Computer\n70%\n2010 - 2014"
                        android:textColor="@android:color/black" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="@dimen/margin_top10"
                android:layout_marginRight="@dimen/margin_top10"
                android:layout_marginBottom="@dimen/margin_top10"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/margin_top10"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_prof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/margin_top10"
                        android:text="Professional Experiance"
                        android:textColor="@android:color/black" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/title_prof"
                        android:layout_marginLeft="@dimen/margin_top10"
                        android:layout_marginRight="@dimen/margin_top10"
                        android:background="@android:color/darker_gray" />



                    <TextView
                        android:id="@+id/prof_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view4"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="@dimen/margin_top10"
                        android:layout_marginTop="@dimen/margin_top10"
                        android:layout_marginRight="@dimen/margin_top10"
                        android:text="Sr.Android Developer\nDroidAlpha Technologies Pvt Ltd\n6th Jun 2016 - 8th Dec 2019"
                        android:textColor="@android:color/black" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>